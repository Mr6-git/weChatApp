.account {
  position: relative;
  height: 100%;
}
.logo-img {
  width: 120rpx;
  height: 120rpx;
  margin-top: 25rpx;
  border-radius: 50%;
}
.welcome {
  margin: 30rpx 0 80rpx;
  color: #292929;
  font-size: 48rpx;
}
.input-box {
  position: relative;
}
.input-box::after{
  content: '';
  position: absolute;
  pointer-events: none;
  transform-origin: 0 0; 
  bottom: 0;
  left: 0;
  width: 100%; 
  height: 1px; 
  transform: scaleY(0.5);
  background: #D7D7D7;
}
.operate-wrap {
  position: absolute;
  top: 50%;
  right: 0;
  z-index: 999;
  transform: translateY(-50%);
}
.close-img {
  width: 24rpx;
  height: 24rpx;
}
.eye-img {
  width: 36rpx;
  height: 36rpx;
  margin-right: 40rpx;
}
.my-input {
  width: 500rpx;
  padding: 25rpx 0;
  margin-bottom: 20rpx;
  background: #fff;
  color: #202020;
  font-size: 34rpx;
}
.showPwd {
  position: absolute;
  left: 0;
  top: 0;
  background: #fff;
  border-bottom: none;
  z-index: 99;
}
.showPwd.my-input::after{
  content: '';
  position: absolute;
  pointer-events: none;
  transform-origin: 0 0; 
  bottom: 0;
  left: 0;
  width: 100%; 
  height: 1px; 
  transform: scaleY(0.5);
  background: #D7D7D7;
}
.tip {
  color: #8A8A8A;
  font-size: 24rpx;
}
.login-btn {
  width: 100%;
  height: 86rpx;
  margin: 50rpx 0 70rpx;
  background: #C7C7C9;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  line-height: 86rpx;
}
.login-btn.active {
  background: #FF6600;
}
.sub-tab {
  color: #4A4A4A;
  font-size: 28rpx;
}
.enter-img {
  width: 16rpx;
  height: 16rpx;
  margin-left: 10rpx;
}

.step-2 {
  padding-top: 170rpx;
}
.code-tip {
  margin-bottom: 15rpx;
  color: #292929;
  font-size: 48rpx;
}
.code-sub-tip {
  color: #616265;
  font-size: 26rpx;
}
.input-wrap {
  margin-bottom: 20rpx;
  padding-top: 40rpx;
}
.code-input {
  width: 90rpx;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #C6C6C6;
  color: #202020;
  font-size: 34rpx;
  text-align: center;
}
.time-tip {
  color: #8A8A8A;
  font-size: 24rpx;
}
.protocol {
  position: absolute;
  bottom: 70rpx;
  width: 100%;
  text-align: center;
}

.flex-left {
  display: flex;
  align-items: center;
}
.flex-sb {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.grey {
  color: #999999;
}
.blue {
  color: #0066CC;
}
