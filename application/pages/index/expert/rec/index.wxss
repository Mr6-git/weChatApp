/* pages/index/expert/rec/index.wxss */
.container{
  height: 100%;
  width: 100%;
  background: #f5f5f5;
  overflow: hidden;
}
.banner {
  width: 690rpx;
  height: 320rpx;
  margin: 10rpx 30rpx 20rpx;
  background: #dfdfdfdf;
  border-radius: 14rpx;
}
.choose-tab {
  display: flex;
  align-items: center;
  width: 690rpx;
  height: 64rpx;
  margin: 0 30rpx;
  background: #E9E9E9;
  color: #666666;
  font-size: 28rpx;
  border-radius: 10rpx;
}
.choose-tab > view {
  flex: none;
  width: 125rpx;
  height: 100%;
  text-align: center;
  line-height: 64rpx;
}
.choose-tab view.active {
  width: 190rpx;
  background: #FF6600;
  color: #ffffff;
}
.choose-tab > view:first-of-type {
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}
.choose-tab > view:last-of-type {
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.content {
  padding: 24rpx 30rpx;
}
.no-data {
  position: relative;
  width: 100%;
  height: 280rpx;
  padding-top: 50rpx;
}


