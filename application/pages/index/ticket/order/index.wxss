.container {
  height: 100%;
  width: 100%;
  background: #f5f5f5;
  color: #333;
  font-size: 28rpx;
  overflow-x: hidden;
  overflow-y: scroll;
}

.header {
  position: relative;
  height: 128rpx;
  padding: 56rpx 0 0;
  background: #fff;
  color: #000;
  font-size: 37rpx;
  text-align: center;
}

.header.android {
  height: 150rpx;
  padding: 74rpx 0 0;
}

.icon-back {
  position: absolute;
  left: 20rpx;
  bottom: 25rpx;
  width: 35rpx;
  height: 35rpx;
}

.top {
  height: 266rpx;
  width: 100%;
  background: #fff;
}

.top-content {
  position: relative;
  height: 266rpx;
  width: calc(100% - 30rpx);
  margin-left: 30rpx;
  border-bottom: 1px solid #f5f5f5;
}

.top-content .left {
  position: absolute;
  top: 0;
  left: 0;
  width: 482rpx;
  height: 100%;
}

.title {
  margin-top: 26rpx;
  font-size: 34rpx;
  color: #333;
  line-height: 48rpx;
}

.time {
  position: absolute;
  top: 164rpx;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #999;
}

.attr {
  position: absolute;
  top: 198rpx;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #999;
}

.top-content .right {
  position: absolute;
  top: 0;
  right: 30rpx;
  width: 128rpx;
  height: 100%;
}

.ticketpic {
  position: absolute;
  width: 128rpx;
  height: 162rpx;
  border-radius: 6rpx;
  top: 26rpx;
  background: #ccc;
}

.know {
  width: 128rpx;
  text-align: center;
  position: absolute;
  bottom: 22rpx;
  font-size: 22rpx;
  color: #f60;
  line-height: 32rpx;
}

.center {
  width: 100%;
  height: 120rpx;
  background: #fff;
  padding-left: 30rpx;
}

.num {
  font-size: 26rpx;
  color: #1a1a1a;
  font-weight: bold;
  padding-top: 20rpx;
  line-height: 40rpx;
}

.give {
  font-size: 26rpx;
  color: #f60;
  line-height: 40rpx;
}

.pay {
  width: 100%;
  margin-top: 20rpx;
  padding: 30rpx;
  background: #fff;
}

.pay-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.payway {
  position: relative;
  width: 100%;
  height: 80rpx;
  margin-top: 20rpx;
}

.zhifubao {
  position: absolute;
  top: 40rpx;
  width: 40rpx;
  height: 40rpx;
}

.pay-text {
  position: absolute;
  top: 40rpx;
  left: 60rpx;
  font-size: 28rpx;
}

.radio {
  position: absolute;
  top: 36rpx;
  right: 0;
  width: 32rpx;
  height: 32rpx;
}

.buy-ticket {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  box-shadow: 0rpx -4rpx 8rpx 0rpx rgba(0, 0, 0, 0.06);
  background: #fff;
}

.money {
  width: 400rpx;
  height: 100%;
  text-indent: 30rpx;
  font-size: 44rpx;
  font-weight: bold;
  line-height: 100rpx;
  float: left;
}

.doIn {
  width: 250rpx;
  background: #f60;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  line-height: 100rpx;
  float: right;
}

/* 弹窗 */

.popupBg {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 97;
}

.popup {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 720rpx;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
  background: #fff;
  animation: buyPopup 0.2s;
  animation-fill-mode: forwards; /*当动画完成时，动画会停留在最后一帧。*/
  z-index: 98;
}

.popup-content {
  position: relative;
  width: 100%;
  height: 100%;
  padding: 30rpx;
  overflow-y: scroll;
  margin-bottom: 100rpx;
}

.close {
  position: absolute;
  top: 40rpx;
  right: 30rpx;
  width: 28rpx;
  height: 28rpx;
  z-index: 99;
}

.popup-title {
  position: absolute;
  top: 40rpx;
  width: 100%;
  text-align: center;
  line-height: 42rpx;
  font-weight: bold;
  font-size: 30rpx;
  z-index: 98;
}

.text-content {
  position: absolute;
  top: 162rpx;
}
.text {
  font-size: 28rpx;
  line-height: 48rpx;
  color: #666666;
}

@keyframes buyPopup {
  0% {
    bottom: -956rpx;
  }

  100% {
    bottom: 0;
  }
}


