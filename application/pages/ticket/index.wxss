.container {
  height: 100%;
  width: 100%;
  background: #f5f5f5;
  color: #333;
  font-size: 28rpx;
  padding-bottom: 20rpx;
}

.header {
  position: relative;
  height: 128rpx;
  padding: 56rpx 0 0;
  background: #fff;
  color: #000;
  font-size: 37rpx;
  text-align: center;
}

.header.android {
  height: 150rpx;
  padding: 74rpx 0 0;
}

.icon-back {
  position: absolute;
  left: 20rpx;
  bottom: 25rpx;
  width: 35rpx;
  height: 35rpx;
}

.main {
  height: calc(100% - 128rpx);
  width: 100%;
  background: #f5f5f5;
  overflow-x: hidden;
  overflow-y: scroll;
}

.main.android {
  height: calc(100% - 150rpx);
}

.ticketList {
  position: relative;
  height: 300rpx;
  width: 690rpx;
  background: #fff;
  border-bottom: 1px solid #fff0f0f0;
  padding: 40rpx 30rpx 38rpx 30rpx;
  border-radius: 14rpx;
  margin: 20rpx 30rpx 0 30rpx;
}

.list-left {
  width: 180rpx;
  height: 228rpx;
  border-radius: 6rpx;
}

.list-right {
  width: 436rpx;
  position: absolute;
  top: 40rpx;
  left: 238rpx;
  height: 228rpx;
}

.right-title {
  font-size: 28rpx;
  line-height: 40rpx;
  color: rgba(3, 3, 3, 1);
}

.right-time {
  margin-top: 30rpx;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 34rpx;
  color: rgba(155, 155, 155, 1);
}

.right-addr {
  margin-top: 10rpx;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 34rpx;
  color: rgba(155, 155, 155, 1);
}

.right-price {
  position: absolute;
  bottom: 0;
  font-size: 22rpx;
  font-weight: bold;
  line-height: 32rpx;
  color: #f36;
}

.right-buy {
  position: absolute;
  right: 30rpx;
  font-size: 22rpx;
  bottom: 0;
  text-align: center;
}

.type1 {
  color: #2d8bfa;
}

.type2 {
  color: #f60;
}

.type3 {
  color: #b3b3b3;
}

.type4 {
  color: #fead6d;
}
