/* application/pages/charge/index.wxss */
.container{
  position: relative;
  height: 100%;
  width: 100%;
  background: #f5f5f5;
  color: #333333;
  font-size: 28rpx;
  overflow-x: hidden;
  overflow-y: scroll;
}
.header {
  position: relative;
  height: 128rpx;
  padding: 56rpx 0 0;
  background: #ffffff;
  color: #000000;
  font-size: 37rpx;
  text-align: center;
}
.header.android {
  height: 150rpx;
  padding: 74rpx 0 0;
}
.icon-back {
  position: absolute;
  left: 20rpx;
  bottom: 25rpx;
  width: 35rpx;
  height: 35rpx;
}
.main {
  background: #ffffff;
  color: #333333;
  font-size: 30rpx;
}
.list {
  padding: 30rpx 18rpx 20rpx;
}
.list-item {
  position: relative;
  width: 214rpx;
  height: 136rpx;
  margin: 12rpx;
  flex-direction: column;
}
.list-item::after {
  content: '';
  position: absolute;
  pointer-events: none;
  transform-origin: 0 0;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  border-radius: 10rpx;
  transform: scale(0.5);
  border: 1px solid #E5E5E5;
}
.list-item.active::after {
  border: 1px solid #F5A623;
  box-shadow: 0 0 15rpx 1rpx #F5A623;
}
.sub {
  color: #9B9B9B;
  font-size: 26rpx;
}
.citem {
  padding: 30rpx;
}
.count {
  width: 90rpx;
  height: 46rpx;
  margin: 0 20rpx;
  background: #F2F2F2;
  text-align: center;
  line-height: 46rpx;
  border-radius: 6rpx;
}
.total {
  color: #FF6600;
  font-size: 38rpx;
}
.char {
  font-size: 24rpx;
}
.charge-btn {
  width: 690rpx;
  height: 100rpx;
  margin: 80rpx auto 0;
  background: #CCCCCC;
  color: #ffffff;
  font-size: 36rpx;
  text-align: center;
  line-height: 100rpx;
  border-radius: 10rpx;
}
.charge-btn.active {
  background: #FF9900;
}
.cover {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
  display: flex;
  justify-content: center;
  align-items: center;
}
.coverContent {
  width: 80%;
  /* padding: 30rpx; */
  background: #ffffff;
  border-radius: 10rpx;
}
.backBtn {
  padding: 30rpx;
  background: transparent;
  border-color: transparent;
  color: #333333;
  font-size: 28rpx;
}

.flex {
  display: flex;
  justify-content: center;
  align-items: center;
}
.flex-sb {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.flex-left {
  display: flex;
  align-items: center;
}
.flex-wrap {
  display: flex;
  flex-wrap: wrap;
}
