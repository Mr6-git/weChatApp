/* application/pages/bill/index.wxss */
.container{
  height: 100%;
  width: 100%;
  background: #f5f5f5;
  color: #333333;
  font-size: 28rpx;
  overflow-x: hidden;
  overflow-y: scroll;
}
.header {
  position: relative;
  height: 128rpx;
  padding: 56rpx 0 0;
  margin: 0 0 20rpx;
  background: #ffffff;
  color: #000000;
  font-size: 37rpx;
  text-align: center;
}
.header.android {
  height: 150rpx;
  padding: 74rpx 0 0;
}
.icon-back {
  position: absolute;
  left: 20rpx;
  bottom: 25rpx;
  width: 35rpx;
  height: 35rpx;
}
.box {
  flex-direction: column;
  width: 690rpx;
  height: 200rpx;
  margin: 0 auto 20rpx;
  background: linear-gradient(to right, #FF8846, #FD6D4C,#ED3F62);
  color: #ffffff;
  font-size: 60rpx;
  border-radius: 14rpx;
  box-shadow: 0 0 6rpx 2rpx rgb(253, 194, 152);
}
.tips {
  margin-top: 8rpx;
  font-size: 24rpx;
}
.title {
  padding: 6rpx 30rpx 18rpx;
  color: #999999;
  font-size: 24rpx;
}


.flex {
  display: flex;
  justify-content: center;
  align-items: center;
}