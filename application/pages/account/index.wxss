/* application/pages/account/index.wxss */
.container{
  height: 100%;
  width: 100%;
  background: #f5f5f5;
  color: #333333;
  font-size: 28rpx;
  overflow-x: hidden;
  overflow-y: scroll;
}
.header {
  position: relative;
  height: 128rpx;
  padding: 56rpx 0 0;
  margin: 0 0 20rpx;
  background: #ffffff;
  color: #000000;
  font-size: 37rpx;
  text-align: center;
}
.header.android {
  height: 150rpx;
  padding: 74rpx 0 0;
}
.icon-back {
  position: absolute;
  left: 20rpx;
  bottom: 25rpx;
  width: 35rpx;
  height: 35rpx;
}
.main {
  position: relative;
  padding-left: 30rpx;
  background: #ffffff;
}
.main::after {
  content: '';
  position: absolute;
  pointer-events: none;
  transform-origin: 0 0;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  border-top: 1px solid #d7d7d7;
  border-bottom: 1px solid #d7d7d7;
}
.li-item {
  position: relative;
  height: 96rpx;
  padding-right: 30rpx;
}
.li-item:not(:last-of-type)::after {
  content: '';
  position: absolute;
  pointer-events: none;
  transform-origin: 0 0;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  border-bottom: 1px solid #d7d7d7;
}
.li-item.ava {
  height: 160rpx;
}
.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}
.val {
  color: #999999;
}
.logout-btn {
  width: 690rpx;
  height: 100rpx;
  margin: 60rpx auto 0;
  background: #FD892F;
  color: #ffffff;
  font-size: 36rpx;
  text-align: center;
  line-height: 100rpx;
  border-radius: 10rpx;
}


.flex-sb {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
